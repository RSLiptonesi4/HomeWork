using System;

namespace FirstProject {
    internal class Program {
        static void Main(string[] args) 
            {
            Console.Write("Введите количество пациентов: ");
            
            int patients = Convert.ToInt32(Console.ReadLine());
            
            int timeForPatient = 10;
            
            int totalTimeInMinute = patients * timeForPatient;

            int hours = totalTimeInMinute / 60;
            int minutes = totalTimeInMinute % 60;

            Console.WriteLine("Вы должны отстоять " + hours + " часов и " + minutes + " минут ");
        }


    }
}
